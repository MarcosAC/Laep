<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:Views="clr-namespace:Laep.Views"
       x:Class="Laep.AppShell"
       BackgroundColor="#003366">

    <TabBar>
        <Tab>
            <ShellContent Route="paginaInicial" ContentTemplate="{DataTemplate Views:PaginaPrincipalView}" />
        </Tab>

        <Tab>
            <ShellContent Route="cadastroProjetoEletrico" ContentTemplate="{DataTemplate Views:CadastroProjetoEletricoView}" />
        </Tab>

        <Tab>
            <ShellContent Route="cadastroProjetoPrevencaoIncendio" ContentTemplate="{DataTemplate Views:CadastroProjetoPrevencaoIncendioView}" />
        </Tab>
        
        <Tab>
            <ShellContent Route="caracteriscaPadrao" ContentTemplate="{DataTemplate Views:CaracteristicaPadraoView}" />
        </Tab>

        <Tab>
            <ShellContent Route="dimensionamento" ContentTemplate="{DataTemplate Views:DimensionamentoView}" />
        </Tab>        
    </TabBar>
</Shell>