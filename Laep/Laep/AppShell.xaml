       x:Class="Laep.AppShell"
       BackgroundColor="#003366">

    <TabBar>
        <Tab>
            <ShellContent Route="paginaInicial">
                <Views:CadastroDadosTecnicos />
            </ShellContent>            
        </Tab>

        <Tab>
            <ShellContent Route="cadastroProjetoEletrico">
                <Views:CadastroProjetoEletrico />
