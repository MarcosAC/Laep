<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laep.Views.Cadastro"
             BackgroundColor="#D2F8D2">

    <Shell.TitleView>
        <StackLayout Padding="10">
            <Label Style="{StaticResource styleLabelTitleView}"
                   Text="LA ep Projetos" />
        </StackLayout>
    </Shell.TitleView>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="15">
                <Entry Placeholder="Nome" />
                <Entry Placeholder="Telefone" />
                <Entry Placeholder="E-mail" />
                <Entry Placeholder="Cidade" />
                <Entry Placeholder="Endereço" />
                <Entry Placeholder="No." />
                <Entry Placeholder="Ponto de Referência" />

                <Button Style="{StaticResource styleBaseButton}"
                        Text="Enviar"
                        Margin="0,10,0,0"
                        HeightRequest="60" />

                <Button Text="Cancelar"
                        Style="{StaticResource styleBaseButton}"
                        Margin="0,20,0,0"
                        HeightRequest="60" />
            </StackLayout>  
        </ScrollView>        
    </ContentPage.Content>
</ContentPage>