<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laep.Views.CadastroView"
             BackgroundColor="DarkGray">
    
    <ContentView.Content>
        <ScrollView>
            <Frame Style="{StaticResource styleFrame}">
                <StackLayout>
                    <Entry Placeholder="Nome" />
                    <Entry Placeholder="Telefone" />
                    <Entry Placeholder="E-mail" />
                    <Entry Placeholder="Cidade" />
                    <Entry Placeholder="Endereço" />
                    <Entry Placeholder="No." />
                    <Entry Placeholder="Ponto de Referência" />

                    <Button Style="{StaticResource styleBaseButton}"
                            Text="Enviar"
                            HeightRequest="60" />

                    <Button Style="{StaticResource styleBaseButton}"
                            Text="Cancelar"                                
                            HeightRequest="60" />
                </StackLayout>                    
            </Frame>
        </ScrollView>        
    </ContentView.Content>
</ContentView>