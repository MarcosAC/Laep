<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laep.Views.PaginaPrincipalView"
             Title="LA ep Projetos"
             BackgroundColor="DarkGray"
             Shell.TabBarIsVisible="false">
  
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="15,0,15,0">
            <Button Style="{StaticResource styleBaseButton}" 
                    Text="Projeto Elétrico"
                    Command="{Binding ProjetoEletricoCommand}" />

            <Button Style="{StaticResource styleBaseButton}" 
                    Text="Projeto de Prevenção e Combate a Incêndio"
                    Command="{Binding ProjetoPrevecaoIncendioCommand}" />

            <Button Style="{StaticResource styleBaseButton}" 
                    Text="Padrão CEMIG"
                    Command="{Binding MostrarMensagemCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>